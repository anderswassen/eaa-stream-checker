<?xml version="1.0" encoding="UTF-8"?>
<MPD xmlns="urn:mpeg:dash:schema:mpd:2011" type="static" mediaPresentationDuration="PT1H30M">
  <Period>
    <!-- Video -->
    <AdaptationSet contentType="video" mimeType="video/mp4" lang="en">
      <Representation id="v1" bandwidth="2000000" width="1280" height="720">
        <BaseURL>video/720p.mp4</BaseURL>
      </Representation>
      <Representation id="v2" bandwidth="5000000" width="1920" height="1080">
        <BaseURL>video/1080p.mp4</BaseURL>
      </Representation>
    </AdaptationSet>

    <!-- Main audio -->
    <AdaptationSet contentType="audio" mimeType="audio/mp4" lang="en" label="English">
      <Role schemeIdUri="urn:mpeg:dash:role:2011" value="main" />
      <Representation id="a1" bandwidth="128000">
        <BaseURL>audio/en.mp4</BaseURL>
      </Representation>
    </AdaptationSet>

    <!-- Audio Description -->
    <AdaptationSet contentType="audio" mimeType="audio/mp4" lang="en" label="Audio Description">
      <Role schemeIdUri="urn:mpeg:dash:role:2011" value="description" />
      <Representation id="a2" bandwidth="128000">
        <BaseURL>audio/ad.mp4</BaseURL>
      </Representation>
    </AdaptationSet>

    <!-- Subtitles -->
    <AdaptationSet contentType="text" mimeType="text/vtt" lang="en" label="English">
      <Role schemeIdUri="urn:mpeg:dash:role:2011" value="subtitle" />
      <Representation id="s1" bandwidth="1000">
        <BaseURL>subs/en.vtt</BaseURL>
      </Representation>
    </AdaptationSet>

    <AdaptationSet contentType="text" mimeType="text/vtt" lang="sv" label="Svenska">
      <Role schemeIdUri="urn:mpeg:dash:role:2011" value="subtitle" />
      <Representation id="s2" bandwidth="1000">
        <BaseURL>subs/sv.vtt</BaseURL>
      </Representation>
    </AdaptationSet>
  </Period>
</MPD>
